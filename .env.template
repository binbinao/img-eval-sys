# ============================================
# Image Evaluation System - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# cp env.template .env

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration
# ============================================
# MySQL database connection settings
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=password
DATABASE_NAME=image_evaluation
DATABASE_CONNECTION_LIMIT=10

# ============================================
# Session Configuration
# ============================================
# Session secret key (minimum 32 characters)
# Generate a secure random string for production
# Example: openssl rand -base64 32
SESSION_SECRET=change-this-secret-key-in-production-min-32-chars

# ============================================
# Storage Configuration
# ============================================
# Storage type: "local" for development, "cos" for production
STORAGE_TYPE=local

# ============================================
# Tencent Cloud COS Configuration (Required if STORAGE_TYPE=cos)
# ============================================
# Get these from Tencent Cloud Console: https://console.cloud.tencent.com/cam/capi
TENCENT_CLOUD_SECRET_ID=your_secret_id
TENCENT_CLOUD_SECRET_KEY=your_secret_key
COS_BUCKET_NAME=your_bucket_name
COS_REGION=ap-beijing

# ============================================
# Tencent Cloud Hunyuan Vision API Configuration
# ============================================
# Get these from Tencent Cloud Console: https://console.cloud.tencent.com/hunyuan
# Note: Uses the same credentials as COS (TENCENT_CLOUD_SECRET_ID and TENCENT_CLOUD_SECRET_KEY)
TENCENT_CLOUD_REGION=ap-beijing

# ============================================
# Image Cleanup Service Configuration
# ============================================
# Enable automatic image cleanup (true/false)
CLEANUP_ENABLED=false
# How often to run cleanup (in hours)
CLEANUP_INTERVAL_HOURS=24
# How many days to keep images before cleanup
CLEANUP_RETENTION_DAYS=3

# ============================================
# Sentry Error Tracking (Optional)
# ============================================
# Get DSN from Sentry project settings: https://sentry.io/settings/
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# Testing Configuration (for test environment only)
# ============================================
# Enable integration tests (requires test database)
# DATABASE_TEST_ENABLED=false
